<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_group"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="False"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/false_button"
            android:layout_weight="1"
            android:layout_alignBaseline="@+id/cheat_button"
            android:layout_alignBottom="@+id/cheat_button"
            android:layout_toRightOf="@+id/question"
            android:layout_toEndOf="@+id/question" />

        <Button
            android:text="True"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/true_button"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/question"
            android:layout_toStartOf="@+id/question" />

        <Button
            android:text="Cheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cheat_button"
            android:layout_alignBaseline="@+id/true_button"
            android:layout_alignBottom="@+id/true_button"
            android:layout_centerHorizontal="true"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="Portrait orientation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/buttons_group"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <Button
        android:text="Previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:id="@+id/prev_button" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttons_group"
        android:layout_alignRight="@+id/prev_button"
        android:layout_alignEnd="@+id/prev_button"
        android:layout_marginTop="78dp"
        android:id="@+id/next_button" />

</RelativeLayout>